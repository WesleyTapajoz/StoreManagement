@model IEnumerable<SGL.Domain.Entity.Livro>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paginas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayName("Descrição")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sinopse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capa)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paginas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editora.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sinopse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link.Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { livroId = item.LivroId }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { livroId = item.LivroId }) |
                @Html.ActionLink("Remover", "Remover", new { livroId = item.LivroId })
            </td>
        </tr>
    }

</table>
